{
    "manifest_version": 3,
    "name": "E2E Test Recorder",
    "version": "0.1.0",
    "description": "Record user flows in Chrome and export Playwright scripts.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/16.png",
            "128": "icons/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/16.png",
        "128": "icons/128.png"
    }
}